/**index.wxss**/


.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}


swiper{
  width: 350px;
}
.slide-image{
  width: 100%;
  height: 100%;
}



.info{
  padding: 1em;
}

.info-list{
  padding: 1em 0;
  display: flex;
  flex-direction: row;
}

.info-image{
  width: 100px;
  height: 75px;
}

.info-right{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding-left: 1em;
  font-size: 14px;
  justify-content: space-between;
  line-height: 1.5;
}

.info-title{
  font-weight: bold;
  text-align: justify;
}

.info-extra{
  display: flex;
  justify-content: space-between;
}

.info-author,.info-date{
  font-size: 10px;
  color: #999;

}








































